<!doctype html>
<html>
<head>
</head>
<body>
<!-- login Modal -->
<div class="modal fade" id="loginModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="login-header" style="padding:35px 50px;">
                <!--<button type="button" class="loginClose" data-dismiss="modal">&times;</button>-->
                <h4 class="h4" align="center"><span style="padding-right: 10px"><i class="fas fa-home"></i></span>Login</h4>
            </div>
            <div class="modal-body" style="padding:40px 50px;">
                <form role="form">
                    <div class="form-group">
                        <label for="usrname">Username</label>
                        <input type="text" class="form-control" id="usrname" placeholder="Enter ID">
                    </div>
                    <div class="form-group">
                        <label for="psw">Password</label>
                        <input type="text" class="form-control" id="psw" placeholder="Enter password">
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" value="" checked>Remember me</label>
                    </div>
                    <button type="submit" class="btn btn-warning btn-block">Login</button>
                </form>
            </div>
            <div class="modal-footer" id="login-footer">
                <button type="submit" class="btn btn-danger pull-left" onclick="">Sign Up</button>
                <button type="submit" class="btn btn-dark pull-left" onclick="">Find password</button>
            </div>
        </div>

    </div>
</div>
</body>
</html>
